<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#90CAF9</Color>
    <Color x:Key="SecondaryColor">#64B5F6</Color>
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    
    <SolidColorBrush x:Key="PrimaryBackground" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBackground" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="{StaticResource PrimaryColor}"/>
</ResourceDictionary>
